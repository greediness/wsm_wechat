@import "/pages/movies/movie-grid/movie-grid-template.wxss";
.search{
    background-color:#f2f2f2;
    height:80rpx;
    width:100%;
    display: flex;
    flex-direction: row;
}
.search-img{
    margin:auto 0 auto 20rpx;
}
.placeholder{
    font-size:14px;
    color:#d1d1d1;
    margin-left:20rpx;
}
.search input{
    height:100%;
    width:600rpx;
    margin-left:20px;
    font-size:28rpx;
}
.movies-template{
    margin-bottom:30rpx;
}
.search-panel{
    position:absolute;
    top:80rpx;
}
.xx-img{
    height:30rpx;
    width:30rpx;
    margin:auto 0 auto 10rpx;
}
.container{
    display: flex;
    flex-direction: column;
}
.caption{
    margin-top: 15rpx;
    margin-left: 15rpx;
    font-size: 35rpx;
}
.hot{
    margin-top:15rpx;
    margin-left:18rpx;
}
.hotText{
    margin-left:30rpx;
    font-size:28rpx;
}