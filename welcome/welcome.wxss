}

.container {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.avatarImg {
    border-radius: 50%;
    width: 200rpx;
    height: 200rpx;
    margin-top: 160rpx;
}

.welText {
    margin-top: 100rpx;
    font-size: 35rpx;
    font-weight: bold;
}

.btn-container {
    margin-top: 150rpx;
    border: 1px solid #405f80;
    width: 300rpx;
    height: 80rpx;
    text-align: center;
    border-radius: 5px;
}

.btn {
    font-size: 24rpx;
    font-weight: bold;
